generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  fname    String
  lname    String
  password String
  Income   Income[] @relation("UserIncome")
  Expense  Expense[] @relation("UserExpense")
  Budget   Budget[]  @relation("UserBudget")
}

model Income {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  date        DateTime
  amount      Decimal
  account     String?

  User   User        @relation("UserIncome", fields: [userId], references: [id], onDelete: Cascade)
  userId Int
  type   IncomeTypes
}

model Expense {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  date        DateTime
  amount      Decimal
  card        String?

  User   User          @relation("UserExpense", fields: [userId], references: [id], onDelete: Cascade)
  userId Int
  type   ExpenseTypes

  Budget   Budget?     @relation(fields: [budgetId], references: [id])
  budgetId Int?
}

model Budget {
  id            Int       @id @default(autoincrement())
  userId        Int
  limit         Decimal
  currentSpending Expense[] @relation
  type          ExpenseTypes
  month         Month

  User   User   @relation("UserBudget", fields: [userId], references: [id], onDelete: Cascade)
}


enum IncomeTypes {
  Paycheck
  Interest
  Bonus
  Investment
  Other
}

enum ExpenseTypes {
  Food
  Clothing
  Electronics
  Rent
  Utilities
  Transportation
  Entertainment
  Healthcare
  Other
}

enum Month {
  January
  February
  March
  April
  May
  June
  July
  August
  September
  October
  November
  December
}
