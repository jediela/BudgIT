generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String
  fname    String
  lname    String
  password String
  Income   Income[]
  Expense  Expense[]
}

model Income {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  date        DateTime @default(now())
  amount      Decimal
  account     String?

  User   User        @relation(fields: [userId], references: [id])
  userId Int
  type   IncomeTypes
}

enum IncomeTypes {
  PAYCHECK
}

model Expense {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  date        DateTime @default(now())
  amount      Decimal
  card        String?

  User   User         @relation(fields: [userId], references: [id])
  userId Int
  type   ExpenseTypes
}

enum ExpenseTypes {
  FOOD
}
